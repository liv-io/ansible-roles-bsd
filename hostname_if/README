  hostname_if_mygate
    Description: Define the 'hostname_if_mygate' option.
    Implemented: 1.4.0
    Required   : False
    Value      : Arbitrary
    Type       : String
    Default    : "{{ansible_default_ipv4.gateway}}"
    Options    :
      Examples: '1.1.1.1' | 10.1.1.1' | '192.168.1.1'
      Inactive: 'quiesce' | 'inactive'
      None    : ''

