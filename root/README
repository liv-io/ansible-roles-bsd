VARIABLES
--------------------------------------------------------------------------------

ROLE
  root_state
    Description: Control the state of the role.
                 'root' is a core role and should therefore not be removed.
    Implemented: 0.1
    Required   : False
    Value      : Predetermined
    Type       : String
    Default    : 'install'
    Options    :
      Install : 'true' | 'yes' | 'install'
      Remove  : 'false' | 'no' | 'remove'
      Inactive: 'quiesce' | 'inactive'

  root_authorized_key
    Description: Define the 'root_authorized_key' option.
    Implemented: 0.1
    Required   : False
    Value      : Arbitrary
    Type       : String
    Default    : ''
    Options    :
      Examples: 'ssh-rsa  root'

  root_authorized_key_options
    Description: Define the 'root_authorized_key_options' option.
    Implemented: 0.1
    Required   : False
    Value      : Arbitrary
    Type       : String
    Default    : ''
    Options    :
      Examples: 'command="command"' | 'no-agent-forwarding' | 'no-port-forwarding'

