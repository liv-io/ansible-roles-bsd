--------------------------------------------------------------------------------
DESCRIPTION
--------------------------------------------------------------------------------

This role manages host.

'/etc/hosts' is a simple text file that associates IP addresses with hostnames,
one line per IP address.

For more detailed information on the usage and available configuration options
please consult the following sections.

--------------------------------------------------------------------------------
USAGE
--------------------------------------------------------------------------------

INSTALL
  - host: all
    roles:
      - role: host
    vars:
      host_state: 'install'
      host_path_default: '/etc/hosts'

INACTIVE
  - hosts: all
    roles:
      - role: host
    vars:
      host_state: 'inactive'

CONFIG
  vars:
    host_all:
      - name: 'host01.domain.tld'
        state: 'true'
        ip: '192.168.1.1'
        aliases: ['host01', 'hostname01.domain.tld', 'hostname01']
        comment: 'host01'

    host_group:
      - name: 'host02.domain.tld'
        state: 'true'
        ip: '192.168.1.2'
        aliases: ['host02', 'hostname02.domain.tld', 'hostname02']
        comment: 'host02'

    host_host:
      - name: 'host03.domain.tld'
        state: 'false'
        ip: '192.168.1.3'
        aliases: ['host03', 'hostname03.domain.tld', 'hostname03']
        comment: 'host03'

--------------------------------------------------------------------------------
VARIABLES
--------------------------------------------------------------------------------

CONFIG
  state
    Description: Control the state of the hosts entry.
    Implemented: 0.1
    Required   : False
    Value      : Predetermined
    Type       : String
    Default    : 'true'
    Options    :
      Create: 'true' | 'yes' | 'create'
      Remove: 'false' | 'no' | 'remove'

  name
    Description: Define the hostname of the hosts entry.
    Implemented: 0.1
    Required   : True
    Value      : Arbitrary
    Type       : String
    Default    : ''
    Options    :
      Examples: 'host01' | 'host02' | 'host03'

  aliases
    Description: Define the aliases for the hosts entry.
    Implemented: 0.1
    Required   : False
    Value      : Arbitrary
    Type       : Array
    Default    : []
    Options    :
      Examples: ['alias01'] |
                ['alias01', 'alias02'] |
                ['alias01', 'alias02', 'alias03']
      None    : []

  comment
    Description: Define a comment for the hosts entry.
    Implemented: 0.1
    Required   : False
    Value      : Arbitrary
    Type       : String
    Default    : "{{host.name}}"
    Options    :
      Examples: 'Example Host' | 'Test Host' | 'Service Host'
      None    : ''

  ip
    Description: Define the ip of the hosts entry.
    Implemented: 0.1
    Required   : True
    Value      : Arbitrary
    Type       : String
    Default    : ''
    Options    :
      Examples: '192.168.1.1' | '192.168.1.2' | '192.168.1.3'
      None    : ''

  path
    Description: Define the path of the hosts file.
    Implemented: 0.1
    Required   : False
    Value      : Arbitrary
    Type       : String
    Default    : "{{host_path_default}}"
    Options    :
      Examples: '/etc/hosts'

ROLE
  host_state
    Description: Control the state of the role.
    Implemented: 0.1
    Required   : False
    Value      : Predetermined
    Type       : String
    Default    : 'install'
    Options    :
      Install : 'true' | 'yes' | 'install'
      Disable : 'false' | 'no' | 'disable'
      Inactive: 'quiesce' | 'inactive'

  host_all
    Description: Define the 'host_all' option.
    Implemented: 0.1
    Required   : False
    Value      : Arbitrary
    Type       : Array/Hash
    Default    : []
    Options    :
      Examples: [{name: 'host01.domain.tld', state: 'true', ip: '192.168.1.1',
                  aliases: {'host01', 'hostname01.domain.tld', 'hostname01'}, comment: 'host01'},
                 {name: 'host02.domain.tld', state: 'true', ip: '192.168.1.2',
                  aliases: ['host02', 'hostname02.domain.tld', 'hostname02'], comment: 'host02'}]
      None    : []

  host_group
    Description: Define the 'host_group' option.
    Implemented: 0.1
    Required   : False
    Value      : Arbitrary
    Type       : Array/Hash
    Default    : []
    Options    :
      Examples: [{name: 'host01.domain.tld', state: 'true', ip: '192.168.1.1',
                  aliases: {'host01', 'hostname01.domain.tld', 'hostname01'}, comment: 'host01'},
                 {name: 'host02.domain.tld', state: 'true', ip: '192.168.1.2',
                  aliases: ['host02', 'hostname02.domain.tld', 'hostname02'], comment: 'host02'}]
      None    : []

  host_host
    Description: Define the 'host_host' option.
    Implemented: 0.1
    Required   : False
    Value      : Arbitrary
    Type       : Array/Hash
    Default    : []
    Options    :
      Examples: [{name: 'host01.domain.tld', state: 'true', ip: '192.168.1.1',
                  aliases: {'host01', 'hostname01.domain.tld', 'hostname01'}, comment: 'host01'},
                 {name: 'host02.domain.tld', state: 'true', ip: '192.168.1.2',
                  aliases: ['host02', 'hostname02.domain.tld', 'hostname02'], comment: 'host02'}]
      None    : []

  host_path_default
    Description: Define the default path of the hosts file.
    Implemented: 0.1
    Required   : False
    Value      : Arbitrary
    Type       : String
    Default    : '/etc/hosts'
    Options    :
      Examples: '/etc/hosts'

